<% layout('front/boilerplate')%>

<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-3">
            <img src="<%= skiresortss.image%>" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title"><%= skiresortss.title%></h5>
                <p class="card-text"><%= skiresortss.description%></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= skiresortss.location%></li>
                <li class="list-group-item">$<%= skiresortss.price%>/hour</li>
            </ul>
            <div class="card-body">
                <a class="card-link btn btn-info" href="/front/<%=skiresortss._id%>/edit">Edit</a>
                <form class="d-inline" action="/front/<%=skiresortss._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
            <div class="card-footer text-muted">
                Recently added
            </div>
        </div>
    </div>
    <div class="col-6">
        <h2>Leave a Review</h2>
        <form action="/front/<%=skiresortss._id%>/reviews" method="POST" class="mb-3 validated-form" novalidate>
            <div class="mb-3">
                <label class="form-label" for="rating">Rating</label>
                <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
            </div>
            <div class="mb-3">
                <label class="form-label" for="body">Review</label>
                <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <button class="btn btn-success">Submit</button>
        </form>
        <% for(let review of skiresortss.reviews) { %>
        <div class="card mb-3 ">
            <div class="card-body">
                <h5 class="card-title">Rating: <%= review.rating %></h5>
                <p class="card-text">Review: <%= review.body %></p>
                <form action="/front/<%=skiresortss._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-sm btn-danger">Delete</button>
                </form>
            </div>
        </div>
        <% } %>
    </div>
</div>