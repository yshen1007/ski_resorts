<% layout('/front/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Skiresort</h1>
    <div class="col-6 offset-3">
        <form action="/front/<%=skiresortss._id%>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="skiresortss[title]"
                    value="<%=skiresortss.title %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="skiresortss[location]"
                    value="<%=skiresortss.location %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="skiresortss[image]"
                    value="<%=skiresortss.image %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Skiresort Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="skiresortss[price]" value="<%=skiresortss.price %>">
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description"
                    name="skiresortss[description]"><%= skiresortss.description%></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Skiresort</button>
            </div>
        </form>
        <a href="/front/<%= skiresortss._id%>">Back To Skiresorts</a>

    </div>
</div>